extends layout/index

block content
  .col-md-offset-1.col-md-11.content
    .row
      section.col-md-9.articles
        article
          h2.article-title=profileData.name
          .row
            .user-container.col-md-4
              img.img-responsive(src=profileData.avatar, alt='article-img')
            .user-body
              p Nombre: 
                strong=profileData.name
              p Fecha de registro: 
                strong=profileData.date_of_creation
              p Correo electrónico: 
                strong=profileData.email
              p Página web: 
                strong=profileData.website
              p Usuario: 
                if profileData.user_type === 0
                  strong básico
                else
                  if profileData.user_type === 1
                    strong administrador
                    if ownProfile
                      a.user-button(href=`/user/`+ profileData._id +`/modify`)
                        button.modify-button Modificar perfil
                
      include layout/aside
